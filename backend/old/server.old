def _load_modes_file() -> dict:
    try:
        data = yaml.safe_load(MODES_PATH.read_text(encoding="utf-8")) or {}
    except FileNotFoundError:
        return {}
    # tolerate either {"modes": {...}} or a bare mapping
    return data.get("modes", data)

